    </a>

    <div class="d-inline-block float-right m-2">
        <a href="/logout">
        <button id="logoutBtn" class="btn btm-sm btn-danger m-2">Logout</button>
        </a>
    </div>
</nav>

<div class="container">
    <div class="row float-right text-center">
        <div class="m-2 mr-5" id="agregaProductos">
            <a href="/carrito">
                <img class="btnImg" src="./images/plus.png" alt="">
            </a>
            <p>Agregar</p>
        </div>
        <div class="m-2 ml-5" id="enviaProductos">
            <a href="/enviar">
                <img class="btnImg" src="./images/send.png" alt="">
            </a>
            <p>Env√≠o</p>
        </div>
    </div>


    <div id="cavaHolder">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="3" class="text-center">
                        <h1>Mi Cava</h1>
                    </th>
                </tr>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Producto</th>
                </tr>
            </thead>
            <tbody>
                {{#each cava}}
                <tr>
                    <td scope="col">{{this.i}}</td>
                    <td scope="col">{{this.cantidad}}</td>
                    <td scope="col">{{this.producto}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

